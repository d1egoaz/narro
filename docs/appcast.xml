---
layout: null
---
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0" xmlns:sparkle="http://www.andymatuschak.org/xml-namespaces/sparkle" xmlns:dc="http://purl.org/dc/elements/1.1/">
    <channel>
        <title>VTS - Voice Typing Studio</title>
        <link>https://github.com/{{ site.repository }}</link>
        <description>Voice Typing Studio - Open-source macOS dictation replacement with AI-powered transcription</description>
        <language>en</language>
        <lastBuildDate>{{ site.time | date_to_rfc822 }}</lastBuildDate>
        
        {% assign releases = site.data.releases | default: empty %}
        {% for release in releases %}
        {% assign version_number = release.version %}
        {% if release.dmg_url and release.sparkle_signature %}
        <item>
            <title>VTS {{ version_number }}</title>
            <link>{{ release.html_url }}</link>
            <description>
                <![CDATA[
                <h2>What's New in Version {{ version_number }}</h2>
                {{ release.body | markdownify }}
                <hr>
                <p><strong>Download:</strong> <a href="{{ release.dmg_url }}">VTS-{{ version_number }}-Universal.dmg</a></p>
                <p><strong>Size:</strong> {{ release.dmg_size | divided_by: 1048576.0 | round: 1 }} MB</p>
                <p><strong>Release Date:</strong> {{ release.published_at | date: "%B %d, %Y" }}</p>
                <p><strong>Sparkle Signature:</strong> Available</p>
                ]]>
            </description>
            <pubDate>{{ release.published_at | date_to_rfc822 }}</pubDate>
            <enclosure url="{{ release.dmg_url }}"
                       length="{{ release.dmg_size }}"
                       type="application/octet-stream"
                       sparkle:version="{{ version_number }}"
                       sparkle:shortVersionString="{{ version_number }}"
                       sparkle:edSignature="{{ release.sparkle_signature }}" />
            <guid isPermaLink="false">{{ site.repository }}-{{ release.tag_name }}</guid>
        </item>
        {% endif %}
        {% endfor %}
        
    </channel>
</rss>
